#ifndef __PUNCTUATION_DEF__
#define __PUNCTUATION_DEF__

#define PUNCTUATION_TOKENS_COUNT 17

#define PUNCTUATION_TOKENS(GENERATE)                 \
    GENERATE(PUNCTUATION_OPEN_PAREN,          "("  ) \
    GENERATE(PUNCTUATION_CLOSE_PAREN,         ")"  ) \
    GENERATE(PUNCTUATION_OPEN_BRACE,          "{"  ) \
    GENERATE(PUNCTUATION_CLOSE_BRACE,         "}"  ) \
    GENERATE(PUNCTUATION_OPEN_BRACKET,        "["  ) \
    GENERATE(PUNCTUATION_CLOSE_BRACKET,       "]"  ) \
    GENERATE(PUNCTUATION_OPEN_ANGLE,          "<"  ) \
    GENERATE(PUNCTUATION_CLOSE_ANGLE,         ">"  ) \
    GENERATE(PUNCTUATION_COMMA,               ","  ) \
    GENERATE(PUNCTUATION_SEMICOLON,           ";"  ) \
    GENERATE(PUNCTUATION_COLON,               ":"  ) \
    GENERATE(PUNCTUATION_QUESTION_MARK,       "?"  ) \
    GENERATE(PUNCTUATION_DOT,                 "."  ) \
    GENERATE(PUNCTUATION_SINGLE_LINE_COMMENT, "//" ) \
    GENERATE(PUNCTUATION_MULTI_LINE_COMMENT,  "/*" ) \
    GENERATE(PUNCTUATION_HASH,                "#"  ) \
    GENERATE(PUNCTUATION_ELLIPSIS,            "...")

// NOTE: IF THIS GENERATION IS CHANGED DO NOT FORGET TO UPDATE COUNT

#endif  // __PUNCTUATION_DEF__