#ifndef __CASES_DEF__
#define __CASES_DEF__

#define A_Z         \
    'A' : case 'B': \
    case 'C':       \
    case 'D':       \
    case 'E':       \
    case 'F':       \
    case 'G':       \
    case 'H':       \
    case 'I':       \
    case 'J':       \
    case 'K':       \
    case 'L':       \
    case 'M':       \
    case 'N':       \
    case 'O':       \
    case 'P':       \
    case 'Q':       \
    case 'R':       \
    case 'S':       \
    case 'T':       \
    case 'U':       \
    case 'V':       \
    case 'W':       \
    case 'X':       \
    case 'Y':       \
    case 'Z'

#define STRING_BYPASS \
    'r' : case 'b':   \
    case 'f':         \
    case 'u'

#define a_z_EXCLUDE_rbuf \
    'c' : case 'a':      \
    case 'd':            \
    case 'e':            \
    case 'g':            \
    case 'h':            \
    case 'i':            \
    case 'j':            \
    case 'k':            \
    case 'l':            \
    case 'm':            \
    case 'n':            \
    case 'o':            \
    case 'p':            \
    case 'q':            \
    case 's':            \
    case 't':            \
    case 'v':            \
    case 'w':            \
    case 'x':            \
    case 'y':            \
    case 'z'

#define a_z        \
    STRING_BYPASS: \
    case a_z_EXCLUDE_rbuf

#define _0_9        \
    '0' : case '1': \
    case '2':       \
    case '3':       \
    case '4':       \
    case '5':       \
    case '6':       \
    case '7':       \
    case '8':       \
    case '9'

#define _non_float_numeric \
    _0_9:                  \
    case 'F':              \
    case 'f':              \
    case 'U':              \
    case 'u':              \
    case 'o':              \
    case 'x':              \
    case 'b':              \
    case 'e':              \
    case 'E':              \
    case 'A':              \
    case 'B':              \
    case 'C':              \
    case 'D':              \
    case 'a':              \
    case 'c':              \
    case 'd':              \
    case '_'

#define WHITE_SPACE  \
    ' ' : case '\t': \
    case '\n':       \
    case '\r'

#define STRING '"' : case '\''

#define PUNCTUATION \
    ')' : case '(': \
    case '{':       \
    case '}':       \
    case '[':       \
    case ']':       \
    case ',':       \
    case ';':       \
    case ':':       \
    case '?':       \
    case '.'

#define OPERATORS   \
    '+' : case '-': \
    case '*':       \
    case '%':       \
    case '&':       \
    case '|':       \
    case '^':       \
    case '!':       \
    case '=':       \
    case '@':       \
    case '<':       \
    case '>':       \
    case '~'

#endif  // __CASES_DEF__